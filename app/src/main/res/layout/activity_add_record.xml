<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="20sp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        tools:context="com.sliit.budgetcalculator.AddRecordActivity">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Income or Expense"
            android:textAlignment="center"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/dateadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:hint="Date"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_margin="6dp"/>

        <Button
            android:id="@+id/buttonChangeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Change Date"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/incomeRadioBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked"
                android:text="Income"
                android:textSize="20dp"
                tools:text="Income" />

            <RadioButton
                android:id="@+id/expenseRadioBtn"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked"
                android:text="Expense"
                android:textSize="20dp"
                tools:text="Expense" />
        </RadioGroup>

        <EditText
            android:id="@+id/Amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="6dp"
            android:inputType="number"
            android:textSize="20dp"
            android:hint="Amount (Rs.)" />

        <EditText
            android:id="@+id/Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:ems="10"
            android:textSize="15dp"
            android:inputType="text"
            android:hint="Description" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <me.gujun.android.taggroup.TagGroup
            android:id="@+id/tag_group"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            style="@style/TagGroup" />

        <Button
            android:id="@+id/addNewUserButton"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:layout_height="100dp"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff"
            android:text="Add"/>

    </LinearLayout>

</ScrollView>