<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30sp"
    tools:context="com.example.farmermate.ViewActivity_ex">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26sp"
        android:layout_marginStart="26sp"
        android:layout_marginTop="60sp"
        android:textSize="20sp"
        android:textColor="#7E7CF7"
        android:text="@string/Amount" />

    <TextView
        android:id="@+id/textView_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10sp"
        android:textSize="20sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_amount"
        android:layout_alignStart="@+id/textView_amount"
        android:layout_below="@+id/textView_amount"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:textColor="#7E7CF7"
        android:text="@string/Category" />

    <TextView
        android:id="@+id/textView_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_notestitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_cat"
        android:layout_alignStart="@+id/textView_cat"
        android:layout_below="@+id/textView_cat"
        android:layout_marginTop="40dp"
        android:textColor="#7E7CF7"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_notestitle"
        android:layout_alignStart="@+id/textView_notestitle"
        android:layout_below="@+id/textView_notestitle"
        android:layout_marginTop="10dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Delete"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView_notes"
        android:layout_alignStart="@+id/textView_notes"
        android:layout_marginBottom="70sp" />

    <Button
        android:id="@+id/button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_delete"
        android:layout_marginLeft="51sp"
        android:layout_marginStart="51sp"
        android:layout_toEndOf="@+id/button_delete"
        android:layout_toRightOf="@+id/button_delete"
        android:text="@string/Edit" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#7E7CF7"
        android:text="TextView"
        android:layout_alignParentTop="true" />
</RelativeLayout>
