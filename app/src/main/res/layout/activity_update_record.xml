<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    tools:context="com.sliit.budgetcalculator.AddRecordActivity">

    <TextView
        android:id="@+id/titleUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Income or Expense"
        android:textAlignment="center"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/IE_Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:gravity="center"
        android:textSize="25dp"
        android:hint="Date"
        android:layout_margin="3dp"/>

    <Button
        android:id="@+id/buttonChangeDateUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Change Date"/>

    <EditText
        android:id="@+id/IE_Amount_Update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:inputType="number"
        android:hint="Amount" />

    <EditText
        android:id="@+id/IE_Desp_Update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:inputType="text"
        android:hint="Description" />

    <Button
        android:id="@+id/updateUserButton"
        android:layout_width="100dp"
        android:layout_margin="20dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#fff"
        android:text="Update"/>

</LinearLayout>
</ScrollView>
